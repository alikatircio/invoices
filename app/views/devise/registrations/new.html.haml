%h2 Kaydol
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f|
  = f.error_notification
  .form-inputs
    = f.input :username, :required => true, :autofocus => true, :label => "Kullanıcı Adı"
    = f.input :email, :required => true, :autofocus => true
    = f.input :password, :required => true, :label => "Şifre"
    = f.input :password_confirmation, :required => true, :label => "Şifrenizi Onaylayın"
  .form-actions
    = f.button :submit, "Giriş", :class => 'btn-primary'
= render "devise/shared/links"