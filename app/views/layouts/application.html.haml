%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title
      Cari | #{yield :title || "Hoşgeldiniz"}
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield :head
  %body
    %header.navbar.navbar-fixed-top
      %nav.navbar-inner
        %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.brand{:href => "/"}
          Cari
        .nav-collapse

          %ul.nav.pull-right
            - if current_user
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  %i.icon-user.icon-white

                  %b.caret
                %ul.dropdown-menu
                  %li= link_to t('profilimi düzenle'), edit_user_registration_path
                  %li.divider
                  %li= link_to t('çıkış'), destroy_user_session_path, :method => :delete
            - else
              %li= link_to t('kaydol'), new_user_registration_path
              %li= link_to t('giriş'), new_user_session_path


    - if flash.count > 0
      .container
        .row-fluid
          - flash.each do |name, msg|
            %div{:class => "alert alert-#{name}"}
              %a.close{"data-dismiss" => "alert", :href => "#"} &times;
              = content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String)
    .container
      .wrapper.row-fluid
        .span12.wrap
          .head
            .span4.pull-left
              = yield :toolbar_left
            .span4.title
              %h2= yield :title
            .span4.pull-right
              = yield :toolbar_right
          = yield