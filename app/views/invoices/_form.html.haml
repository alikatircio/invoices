= simple_form_for @invoice, :html => {:multipart => true}  do |f|
  = f.error_notification
  .form-inputs
    = f.input :serial
    = f.input :date
    = f.input :amount
    = f.input :vat
    = f.input :io, :collection => [['Gelen', 1], ['Giden', -1]], :as => :radio, :checked => 1
    = f.input :photo
  = f.button :submit, :class => 'btn-primary'
